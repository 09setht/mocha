html
  head
    title Mocha - API documentation
    link(rel='stylesheet', href='style.css')
  body
    #content
      h1 Mocha

      for comment in comments
        if ignore(comment)
          - continue

        .comment(id=id(comment))
          h2= title(comment)
          .description!= comment.description.full
          h3 Source
          pre
            code!= comment.code
    
    ul#menu
      for comment in comments
        if ignore(comment)
          - continue
        li
          a(href='#' + id(comment))= title(comment)
